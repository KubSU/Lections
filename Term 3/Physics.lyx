Берем любые 3 точки твердого тела.
 
\begin_inset Formula $A\left(x_{a},y_{a},z_{a}\right),\ B\left(x_{b},y_{b},z_{b}\right),\ C\left(x_{c},y_{c},z_{c}\right)$
\end_inset

.
\end_layout

\begin_layout Proof
\begin_inset Formula $R_{A,B}=\sqrt{\left(x_{a}-x_{b}\right)^{2}+\left(y_{a}-y_{b}\right)^{2}+\left(z_{a}-z_{b}\right)^{2}}=const$
\end_inset

 
\end_layout

\begin_layout Proof
\begin_inset Formula $R_{B,C}=const$
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $R_{A,C}=const$
\end_inset

 
\end_layout

