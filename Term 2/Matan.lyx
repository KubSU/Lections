\begin_layout Theorem
Пусть функция 
\begin_inset Formula $y=f\left(x\right)$
\end_inset

 n раз диффиренцируема в 
\begin_inset Formula $x_{0}$
\end_inset

, тогда в некоторой окрестности точки 
\begin_inset Formula $x_{0}$
\end_inset

 справедливо: 
\begin_inset Formula 
\begin{align}
f\left(x\right) & =f\left(x_{0}\right)+\dfrac{f\pr\left(x_{0}\right)}{1!}\left(x-x_{0}\right)+\dfrac{f\pr\pr\left(x_{0}\right)}{2!}\left(x-x_{0}\right)^{2}+\dots+\dfrac{f^{\left(n\right)}\left(x_{0}\right)}{n!}\left(x-x_{0}\right)^{n}+o\left(\left(x-x_{0}\right)^{n}\right)\label{eq:LocalTeylorFormula}
\end{align}

\end_inset


\end_layout

\begin_layout Remark*
Остаток 
\begin_inset Formula $R_{n}\left(x\right)=o\left(\left(x-x_{0}\right)^{n}\right)$
\end_inset

 б.м.ф.
 более высогоко порядка , чем 
\begin_inset Formula $\left(x-x_{0}\right)^{n}$
\end_inset

 при 
\begin_inset Formula $x\longrightarrow x_{0}$
\end_inset

.
 
\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Remark*
Формула (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:LocalTeylorFormula"

\end_inset

) - локальныя формула Тейлора, а 
\begin_inset Formula $R_{n}\left(x\right)$
\end_inset

 - остаток формулы Тейлора в форме Пеано.
 Применяесть при вычислении пределов.
\end_layout

\begin_layout Proof
Вычислим предел.
\end_layout

\begin_layout Proof
\begin_inset Formula 
\begin{eqnarray*}
\underset{x\st x_{0}}{\lim}\dfrac{R_{n}\left(x\right)}{\left(x-x_{0}\right)^{n}} & = & \left\{ \begin{array}{c}
R_{n}\left(x_{0}\right)=f\left(x_{0}\right)-P_{n}\left(x\right)=0\\
R_{n}\left(x\right)=f\left(x\right)-P_{n}\left(x\right)=\left\{ \dfrac{0}{0}\right\} 
\end{array}\right\} =\\
 & = & \underset{x\st x_{0}}{\lim}\dfrac{R_{n}\pr\left(x\right)}{n\left(x-x_{0}\right)^{n-1}}=\\
 & = & \left\{ \begin{array}{c}
R_{n}\pr\left(x\right)=f\pr\left(x\right)-P_{n}\pr\st0\end{array}\right\} =\\
 & = & \underset{x\st x_{0}}{\lim}\dfrac{R_{n}\pr\pr\left(x\right)}{n\left(n-2\right)\left(x-x_{0}\right)^{n-2}}=\\
 & = & \tr=\\
 & = & \underset{x\st x_{0}}{\lim}\dfrac{R_{n}^{\left(n\right)}\left(x\right)}{n!}=\\
 & = & \left\{ R_{n}^{\left(n\right)}\left(x\right)=f^{\left(n\right)}\left(x\right)-P_{n}^{\left(n\right)}\left(x\right)\st0\right\} =\\
 & = & 0
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Proof
Тоесть 
\begin_inset Formula $R_{n}\left(x\right)=o\left(\left(x-x_{0}\right)^{n}\right)$
\end_inset

.
\end_layout

\begin_layout Subsubsection
Остаток формулы Тейлора в форме Лагранжа.
\end_layout

\begin_layout Theorem
Пусть функция 
\begin_inset Formula $y=f\left(x\right)$
\end_inset

 дифференцируема 
\begin_inset Formula $n+1$
\end_inset

 раз в некоторой окрестности точки 
\begin_inset Formula $x_{0}$
\end_inset

, тогда в данной окреснтости справедливо равенство: 
\begin_inset Formula 
\begin{align}
f\left(x\right) & =f\left(x_{0}\right)+\dfrac{f\pr\left(x_{0}\right)}{1!}\left(x-x_{0}\right)+\dfrac{f\pr\pr\left(x_{0}\right)}{2!}\left(x-x_{0}\right)^{2}+\tr+\dfrac{f^{\left(n\right)}\left(x_{0}\right)}{n!}\left(x-x_{0}\right)^{n}+\dfrac{f^{\left(n+1\right)}\left(\varphi\right)}{\left(n+1\right)!}\left(x-x_{0}\right)^{n+1}\label{eq:TeylorAndLagrange}
\end{align}

\end_inset

где 
\begin_inset Formula $\varphi$
\end_inset

 - точка из интервала 
\begin_inset Formula $\left(x_{0};x\right)$
\end_inset

.
\end_layout

\begin_layout Remark*
Формула (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:TeylorAndLagrange"

\end_inset

) - нелокальная формула Тейлора.
\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Remark*
\begin_inset Formula $R_{n}\left(x\right)=\dfrac{f^{\left(n+1\right)}\left(\varphi\right)}{\left(n+1\right)!}\left(x-x_{0}\right)^{n+1}$
\end_inset

 - остаток формулы Тейлора в форме Лагранжа.
\end_layout

\begin_layout Proof
Рассмотрим вспомогательную формулу 
\begin_inset Formula $g\left(x\right)=\left(x-x_{0}\right)^{n+1}$
\end_inset

.
\end_layout

\begin_layout Proof
\begin_inset Formula $g\left(x_{0}\right)=g\pr\left(x_{0}\right)=g\pr\pr\left(x_{0}\right)=\tr=g^{\left(n\right)}\left(x_{0}\right)=0$
\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $g^{\left(n+1\right)}\left(x_{0}\right)=\left(n+1\right)!$
\end_inset

 - для любой точки 
\begin_inset Formula $x$
\end_inset

.
\end_layout

\begin_layout Proof
Выделим частное
\begin_inset Formula 
\begin{eqnarray*}
\dfrac{R_{n}\left(x\right)}{g\left(x\right)} & = & \left\{ \begin{array}{c}
x\in U_{g}\left(x_{0}\right)\\
U_{g}\left(x_{0}\right)-\text{область в условии теоремы}
\end{array}\right\} =\\
 & = & \dfrac{R_{n}\left(x\right)-R_{n}\left(x_{0}\right)}{g\left(x\right)-g\left(x_{0}\right)}=\\
 & = & \left\{ \begin{array}{c}
\text{Теорема Коши}\\
\exists c_{1}\in\left(x,x_{0}\right)
\end{array}\right\} =\\
 & = & \dfrac{R_{n}\pr\left(c_{1}\right)}{g\pr\left(c_{1}\right)}=\\
 & = & \dfrac{R_{n}\pr\left(c_{1}\right)-R_{n}\left(x_{0}\right)}{g\pr\left(c_{1}\right)-g\pr\left(x_{0}\right)}=\\
 & = & \left\{ \begin{array}{c}
\text{По теореме Коши}\\
\exists c_{2}\in\left(x_{0},c_{1}\right)
\end{array}\right\} =\\
 & = & \dfrac{R_{n}\pr\pr\left(c_{2}\right)}{g\pr\pr\left(c_{2}\right)}=\\
 & = & \tr=\\
 & = & \dfrac{R_{n}^{\left(n\right)}\left(c_{n}\right)}{g^{\left(n\right)}\left(c_{n}\right)}=\\
 & = & \dfrac{R_{n}^{\left(n\right)}\left(c_{n}\right)-R_{n}^{\left(n\right)}\left(x_{0}\right)}{g^{\left(n\right)}\left(c_{n}\right)-g^{\left(n\right)}\left(x_{0}\right)}=\\
 & = & \dfrac{R_{n}^{\left(n+1\right)}\left(\varphi\right)}{\left(n+1\right)!}=\\
 & = & \dfrac{f^{\left(n\right)}\left(\varphi\right)-f^{\left(n+1\right)}\left(\varphi\right)}{\left(n+1\right)!}=\\
 & = & \dfrac{f^{\left(n+1\right)}\left(\varphi\right)}{\left(n+1\right)!}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $R_{n}\left(x\right)=\dfrac{f^{\left(n+1\right)}\left(\varphi\right)}{\left(n+1\right)!}\left(x-x_{0}\right)^{n+1}$
\end_inset


\end_layout

