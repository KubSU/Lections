\begin_layout Subsubsection
Оценка остатка для формулы Маклорена.
\end_layout

\begin_layout Lemma
Если 
\begin_inset Formula $\exists M>0$
\end_inset

 и 
\begin_inset Formula $\exists\delta>0$
\end_inset

 то 
\begin_inset Formula $\forall n\in\N\ \forall x\in U_{g}\left(0\right)\ \left(\left|x\right|<\delta\right)$
\end_inset

.
 
\begin_inset Formula $\left|f^{\left(n\right)}\left(x\right)\right|\leq M$
\end_inset

, то остаток 
\begin_inset Formula $\left|R_{n}\left(x\right)\right|\leq\dfrac{M\um\delta^{n+1}}{\left(n+1\right)!}$
\end_inset

.
\end_layout

\begin_layout Proof
\begin_inset Formula 
\begin{eqnarray*}
\left|R_{n}\left(x\right)\right| & = & \left\{ \begin{array}{c}
\text{Теорема Лагранжа}\\
\xi\in\left(0,x\right)\sl\xi\in U_{g}\left(0\right)
