#!/bin/sh

cd ../
git checkout develop
git pull
cd Build/

find ../ -name '*.pdf' |
while read fname; do
	echo "Cleaning: ${fname}";
	rm "${fname}";
done

find ../Term\ 4/ -type f -name '*.lyx' |
while read filename; do
	echo "Generating pdf: ${filename}";
	lyx -e pdf2 "${filename}";
done

mkdir pdf4

find ../Term\ 4/ -name '*.pdf' |
while read fname; do
	echo "Pushing: ${fname}";
	mv "${fname}" pdf4/;
done

